{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "长期目标",
  "version": "1.0.0",
  "identifier": "com.longterm-goals.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "长期目标",
        "width": 400,
        "height": 600,
        "resizable": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "macOS": {
      "titleBarStyle": "Overlay",
      "class": "plain",
      "icon": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/icon.svg"
    ]
  }
}

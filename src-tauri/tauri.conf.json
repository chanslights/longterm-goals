{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "长期目标",
  "version": "1.0.0",
  "identifier": "com.longterm.goals",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "长期目标",
        "width": 300,
        "height": 440,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": false,
        "alwaysOnTop": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "identifier": "com.longterm.goals",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
